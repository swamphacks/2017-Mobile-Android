<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.swamphacks.swamphacks_android.sponsors.SponsorDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Learn More"
            android:layout_height="wrap_content"
            android:id="@+id/sponsor_link"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="@drawable/button_blue_white_border"
            android:textColor="@color/white"
            android:layout_width="150dp"
            android:elevation="0dp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sponsor_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_above="@+id/sponsor_link"
            android:id="@+id/list_reps"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sponsor_description"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/sponsor_name"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_lock_lock"
            android:layout_marginTop="25dp"
            android:id="@+id/sponsor_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sponsor_name"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/sponsor_logo"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</FrameLayout>
