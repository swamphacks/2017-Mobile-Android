<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/rep_view"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/rep_image"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="match_parent" android:layout_height="25dp"
            android:id="@+id/rep_name"
            android:layout_margin="5dp"
            android:layout_gravity="start|left"
            android:textColor="@color/black"
            android:text="Rep Name"
            android:paddingLeft="60dp"
            android:textSize="20sp" />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rep_title"
            android:layout_margin="0dp"
            android:text="Rep Title"
            android:paddingLeft="67dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>